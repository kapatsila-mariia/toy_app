<p id="notice"><%= notice %></p>

<h1>Microposts</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost), class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path, class:"btn btn-success" %>
